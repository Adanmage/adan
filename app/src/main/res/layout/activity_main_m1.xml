<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    tools:context=".MainActivity">

    <View
        android:id="@+id/yellowBox2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="700dp"
        android:background="@color/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/yellowBox"
        android:layout_height="30dp"
        android:layout_width="0dp"
        android:background="@color/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/dog_icon"
        android:layout_width="249dp"
        android:layout_height="248dp"
        android:layout_marginTop="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clock_icon"
        android:layout_width="172dp"
        android:layout_height="143dp"
        android:layout_marginTop="292dp"
        android:contentDescription="Clock icon representing time"
        android:scaleType="centerCrop"
        android:src="@drawable/clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/clock_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:text="鬧鐘"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/dog_icon"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="@+id/dog_icon"
        app:layout_constraintTop_toBottomOf="@+id/dog_icon" />

    <ImageView
        android:id="@+id/clander_icon"
        android:layout_width="145dp"
        android:layout_height="159dp"
        android:layout_marginTop="276dp"
        android:contentDescription="Clander icon representing time"
        android:scaleType="centerCrop"
        android:src="@drawable/clander"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendar_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:text="行事曆"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/dog_icon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/dog_icon"
        app:layout_constraintTop_toBottomOf="@+id/dog_icon" />

    <ImageView
        android:id="@+id/note_icon"
        android:layout_width="132dp"
        android:layout_height="149dp"
        android:layout_marginTop="464dp"
        android:contentDescription="Note icon representing time"
        android:scaleType="centerCrop"
        android:src="@drawable/note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/note_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="316dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:text="記事本"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/dog_icon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/dog_icon"
        app:layout_constraintTop_toBottomOf="@+id/dog_icon" />

    <ImageView
        android:id="@+id/gear_icon"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="452dp"
        android:contentDescription="Gear icon representing time"
        android:scaleType="centerCrop"
        android:src="@drawable/gear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/money_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="316dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:text="記帳"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/dog_icon"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="@+id/dog_icon"
        app:layout_constraintTop_toBottomOf="@+id/dog_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>